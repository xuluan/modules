"name": "segyoutput",
"version": "1.0.0",
"use_mpi": false,
"use_cuda": false,
"output_url": {
  "type": "argument",
  "required": true,
  "format": "text",
  "default": "",
  "help": "The full path where the SEGY output file will be created, ie, /full/path/to/the/output_data.segy",
  "width": "full",
  "button": "save-file",
  "filefilter": "*.segy"
},
"run_mode":{
  "type": "choice",
  "required": true,
  "help": "Indicating the operation mode: dry-run: validates configuration without creating file, actual-run: executes the normal SEGY output operation",
  "format": "text",
  "default": "actual-run",
  "options": [
    "dry-run",
    "actual-run"
  ]
},
"primary_name": {
    "type": "argument",
    "required": false,
    "repetable": false,
    "format": "text",
    "width": "default",
    "default": "INLINE",
    "help": "The name of the primary key (usually inline)"
},
"primary_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of primary number in trace headers (default: 189 for inline)",
  "format": "int",
  "default": "189",
  "width": "default"
},
"secondary_name": {
    "type": "argument",
    "required": false,
    "repetable": false,
    "format": "text",
    "width": "default",
    "default": "CROSSLINE",
    "help": "The name of the secondary key (usually crossline)"
},
"secondary_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of crossline number in trace headers (default: 193 for crossline)",
  "format": "int",
  "default": "193",
  "width": "default"
},
"data_name": {
    "type": "argument",
    "required": false,
    "repetable": false,
    "format": "text",
    "width": "default",
    "default": "TRACE",
    "help": "The name of the trace data attribute"
},
"sinterval_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of sample interval in trace headers (default: 117)",
  "format": "int",
  "default": "117",
  "width": "default"
},
"trace_length_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of trace length in trace headers (default: 115)",
  "format": "int",
  "default": "115",
  "width": "default"
},
"data_format_code_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of data format code in trace headers (default: 119)",
  "format": "int",
  "default": "119",
  "width": "default"
},
"textual_header": {
  "type": "argument",
  "required": false,
  "format": "text",
  "width": "full",
  "help": "Custom textual header content (3200 characters max). If not provided, automatic header will be generated."
},
"endianness": {
  "type": "choice",
  "required": false,
  "help": "Byte order for SEGY file: BigEndian (standard SEGY) or LittleEndian",
  "format": "text",
  "default": "BigEndian",
  "options": [
    "BigEndian",
    "LittleEndian"
  ]
},
"data_format": {
  "type": "choice",
  "required": false,
  "help": "SEGY data sample format code. Usually auto-detected from input data.",
  "format": "text",
  "default": "auto",
  "options": [
    "auto",
    "int8",
    "int16", 
    "int32",
    "ieee_float"
  ]
},
"coordinate_system": {
  "type": "choice",
  "required": false,
  "help": "Primary coordinate system: inline_major (inline as primary key) or crossline_major",
  "format": "text",
  "default": "inline_major",
  "options": [
    "inline_major",
    "crossline_major"
  ]
},
"attribute": {
  "required": false,
  "repeatable": true,
  "type": "procedure",
  "help": "Custom attributes to write to SEGY trace headers",
  "name": {
    "type": "argument",
    "required": true,
    "repetable": false,
    "format": "text",
    "width": "default",
    "help": "Name of the attribute"
  },
  "datatype": {
  "type": "choice",
  "required": true,
  "help": "The data type of the current attribute: int8, int16, int32 and float.",
  "format": "text",
  "default": "int32",
  "options": [
    "int8",
    "int16",
    "int32",
    "float"
  ]
  },
  "offset": {
    "type": "argument",
    "required": true,
    "help": "the offset of attribute in trace headers (240 bytes)",
    "format": "int"
  }
}