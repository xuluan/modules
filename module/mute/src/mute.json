"name": "mute",
"version": "1.0.0",
"use_mpi": false,
"use_cuda": false,
"compare_direction": {
  "type": "choice",
  "required": true,
  "help": "Compare direction, options: <, >",
  "format": "text",
  "default": ">",
  "options": [
    "<",
    ">"
  ]  
},
"threshold": {
  "required": true,
  "repeatable": false,
  "type": "option",
  "help": "threshold",
  "options": [
    {
    "value": {
      "type": "argument",
      "required": true,
      "repetable": false,
      "format": "int",
      "default":0,
      "help": "The threshold value for the mute function."
    }
    },
    {
    "expr": {
      "type": "argument",
      "format": "text",
      "required": true,
      "repetable": false,
      "default": "",
      "width": "full",
      "help": "The expression calculates the threshold value, which can include the following operators: +, -, *, /, sin, cos, tan, (, ), as well as integers, floating-point numbers and attribute names. "
    }
    }
  ]
},
"tapering_window_size": {
  "type": "argument",
  "required": true,
  "repetable": false,
  "help": "Tapering window size (Default: 20 ms), positive value: outer taper; negative value: inner taper; 0: no taper.",
  "default": "20",
  "format": "int"
}