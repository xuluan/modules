# {pass: yes, timeout: 300}
# Test attribute update functionality
- testgendata:
    version: '1.0.0'
    primarykey:
      name: 'inline'
      first: 1
      last: 3
      step: 1
    secondarykey:
      name: 'crossline'
      first: 1
      last: 3
      step: 1
    tracekey:
      name: 'samples'
      tmin: 0
      tmax: 1000
      length: 4
      unit: ms
      data:
        random:
          type: float
          min: -1
          max: 1
    attribute:
# First create an attribute
- attrcalc:
    version: '1.1.0'
    attrname: 'UPDATE_TEST'
    type: 'float'
    action: 'create'
    expr: 'INLINE + CROSSLINE'
# Then update it with a new expression
- attrcalc:
    version: '1.1.0'
    attrname: 'UPDATE_TEST'
    type: 'float'
    action: 'update'
    expr: '1.7 * CROSSLINE + UPDATE_TEST'
- testexpect:
    version: '1.0.0'
    primarykey:
      name: 'inline'
      first: 1
      last: 3
      step: 1
    secondarykey:
      name: 'crossline'
      first: 1
      last: 3
      step: 1
    tracekey:
      name: 'samples'
      tmin: 0
      tmax: 1000
      length: 4
      unit: ms
      type: float
      pattern: 'SAME'
    attribute:
    - name: UPDATE_TEST
      unit: ''
      length: 1
      type: float
      pattern: 'ATTRCALC_PLUS_MUL'