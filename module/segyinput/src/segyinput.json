"name": "segyinput",
"version": "1.0.0",
"use_mpi": false,
"use_cuda": false,
"url": {
  "type": "argument",
  "required": true,
  "format": "text",
  "default": "",
  "help": "The full path of the segyinput dataset, ie, /full/path/to/the/segyinput_data.vds",
  "width": "full",
  "button": "file",
  "filefilter": "*.vds"
},
"run_mode":{
  "type": "choice",
  "required": true,
  "help": "Indicating the operation mode: dry-run: only prints 3200 bytes of the text header (80*40), actual-run: executes the normal SEGY input operation",
  "format": "text",
  "default": "actual-run",
  "options": [
    "dry-run",
    "actual-run"
  ]
},
"primary_name": {
    "type": "argument",
    "required": false,
    "repetable": false,
    "format": "text",
    "width": "default",
    "default": "INLINE",
    "help": "The name of the primary key"
},
"primary_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of primary number at trace headers",
  "format": "int",
  "default": "189",
  "width": "default"
},
"secondary_name": {
    "type": "argument",
    "required": false,
    "repetable": false,
    "format": "text",
    "width": "default",
    "default": "CROSSLINE",
    "help": "The name of the secondary key"
},
"secondary_offset":{
  "type": "argument",
  "required": false,
  "help": "the offset of crossline number at trace headers",
  "format": "int",
  "default": "193",
  "width": "default"
},
"attribute": {
  "required": false,
  "repeatable": true,
  "type": "procedure",
  "help": "the attribute from segy trace headers",
  "name": {
    "type": "argument",
    "required": true,
    "repetable": false,
    "format": "text",
    "width": "default",
    "help": "Name of the attribute"
  },
  "datatype": {
  "type": "choice",
  "required": true,
  "help": "The data type of the current attribute: int8, int16, int32, int64, float and double.",
  "format": "text",
  "default": "float",
  "options": [
    "int8",
    "int16",
    "int32",
    "int64",            
    "float",
    "double"  
  ]
  },
  "offset": {
    "type": "argument",
    "required": true,
    "help": "the offset of attribute at trace headers",
    "format": "int",
  }
}
